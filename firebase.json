{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/joinWaitlist",
        "function": "joinWaitlist"
      },
      {
        "source": "/api/getUsers",
        "function": "getUsers"
      },
      {
        "source": "/api/deleteUser",
        "function": "deleteUser"
      },
      {
        "source": "/api/fetchFinancialSummary",
        "function": "fetchFinancialSummary"
      },
      {
        "source": "/api/saveShopifyCredentials",
        "function": "saveShopifyCredentials"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "functions": {
      "host": "127.0.0.1",
      "port": 5011
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5012
    },
    "ui": {
      "host": "127.0.0.1",
      "port": 4011
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4411
    },
    "logging": {
      "host": "127.0.0.1",
      "port": 4511
    },
    "firestore": {
      "port": 8090
    },
    "database": {
      "port": 9010
    },
    "singleProjectMode": true
  }
}