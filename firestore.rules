rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public creation of new user documents for waitlist signup
    match /users/{userId} {
      allow create: if request.resource.data.keys().hasAll(['email', 'createdAt']) &&
                       request.resource.data.email is string &&
                       request.resource.data.createdAt == request.time;
      
      // Authenticated users can read/write their own data
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Shop data access for authenticated users
    match /users/{userId}/shops/{shopId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin-only access (if needed in future)
    match /admin/{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
